<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= businessName %></title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <header>
        <h1>Welcome to <%= businessName %></h1>
        <p>Owned by <%= owner %></p>
    </header>
    
    <section>
        <h2>Our Services</h2>
        <ul>
            <% services.forEach(service => { %>
                <li><%= service %></li>
            <% }); %>
        </ul>
    </section>

    <section>
        <h2>Our Work</h2>
        <div class="gallery">
            <div>
                <h3>Flooring Work</h3>
                <img src="/images/flooring.jpg" alt="Flooring Work" width="300">
            </div>
            <div>
                <h3>Interior Painting</h3>
                <img src="/images/painting.png" alt="Interior Painting" width="300">
            </div>
            <div>
                <h3>Home Remodeling</h3>
                <img src="/images/remodeling.jpg" alt="Home Remodeling" width="300">
            </div>
        </div>
    </section>

    <section>
        <h2>Contact Us</h2>
        <p>Email: <a href="mailto:<%= email %>"><%= email %></a></p>
        <p>Phone: <a href="tel:<%= phone %>"><%= phone %></a></p>
        <p>We serve <%= location %></p>
        <a href="/contact">Contact Us</a>
    </section>
</body>
</html>


